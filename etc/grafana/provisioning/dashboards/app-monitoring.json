{
  "dashboard": {
    "title": "Application Monitoring",
    "tags": ["application", "logs", "traces"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "loki"
            },
            "expr": "sum(rate({job=\"myapp\", event=\"START\"} | json [5m]))",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Status Codes",
        "type": "piechart",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "loki"
            },
            "expr": "sum by (status_code) (count_over_time({job=\"myapp\", event=\"END\"} | json [$__interval]))",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Recent Logs",
        "type": "logs",
        "gridPos": {
          "h": 12,
          "w": 24,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "loki"
            },
            "expr": "{job=\"myapp\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": false,
          "prettifyLogMessage": true,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        }
      },
      {
        "id": 4,
        "title": "Error Logs",
        "type": "logs",
        "gridPos": {
          "h": 10,
          "w": 24,
          "x": 0,
          "y": 20
        },
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "loki"
            },
            "expr": "{job=\"myapp\", level=\"error\"}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Request Latency",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 30
        },
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "loki"
            },
            "expr": "avg_over_time({job=\"myapp\", event=\"END\"} | json | unwrap latency [$__interval])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms"
          }
        }
      }
    ],
    "refresh": "5s",
    "schemaVersion": 38,
    "version": 0
  }
}